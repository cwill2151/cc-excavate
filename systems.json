                {
                    "source": "excavation/common/config.lua",
                    "destination": "excavation/common/config.lua"
                },
                {
                    "source": "excavation/common/protocol.lua",
                    "destination": "excavation/common/protocol.lua"
                },
                {
                    "source": "excavation/common/navigation.lua",
                    "destination": "excavation/common/navigation.lua"
