{
    "version": "1.0.0",
    "repository": "cwill2151/cc-excavate",
    "branch": "master",
    "systems": {
        "supervisor": {
            "name": "Excavation Supervisor",
            "description": "Manages task distribution and coordinates worker turtles",
            "files": [
                {
                    "source": "supervisor/supervisor.lua",
                    "destination": "supervisor/supervisor.lua"
                },
                {
                    "source": "excavate-common/config.lua",
                    "destination": "excavate-common/config.lua"
                },
                {
                    "source": "excavate-common/protocol.lua",
                    "destination": "excavate-common/protocol.lua"
                },
                {
                    "source": "excavate-common/navigation.lua",
                    "destination": "excavate-common/navigation.lua"
                },
                {
                    "source": "excavate-common/inventory.lua",
                    "destination": "excavate-common/inventory.lua"
                }
            ],
            "startup": "supervisor/supervisor",
            "requirements": ["modem"]
        },
        "worker": {
            "name": "Excavation Worker",
            "description": "Executes mining tasks assigned by supervisor",
            "files": [
                {
                    "source": "worker/worker.lua",
                    "destination": "worker/worker.lua"
                },
                {
                    "source": "excavate-common/config.lua",
                    "destination": "excavate-common/config.lua"
                },
                {
                    "source": "excavate-common/protocol.lua",
                    "destination": "excavate-common/protocol.lua"
                },
                {
                    "source": "excavate-common/navigation.lua",
                    "destination": "excavate-common/navigation.lua"
                },
                {
                    "source": "excavate-common/inventory.lua",
                    "destination": "excavate-common/inventory.lua"
                }
            ],
            "startup": "worker/worker",
            "requirements": ["modem", "turtle"]
        }
    },
    "cleanup": {
        "directories": ["supervisor", "worker", "excavate-common"],
        "files": ["startup.lua"],
        "patterns": ["excavation_stats_*.txt"]
    }
}